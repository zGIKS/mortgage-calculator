                    "type": "string"
                },
                "created_at": {
                    "type": "string"
                },
                "currency": {
                    "type": "string"
                },
                "fixed_installment": {
                    "type": "number"
                },
                "id": {
                    "type": "integer"
                },
                "loan_amount": {
                    "type": "number"
                },
                "property_price": {
                    "type": "number"
                },
                "tcea": {
                    "type": "number"
                },
                "term_months": {
                    "type": "integer"
                },
                "user_id": {
                    "type": "string"
