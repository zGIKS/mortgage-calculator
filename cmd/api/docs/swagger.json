        },
        "resources.MortgageResponse": {
            "type": "object",
            "properties": {
                "bank_id": {
                    "type": "string"
                },
                "bank_name": {
                    "type": "string"
                },
                "bono_techo_propio": {
                    "type": "number"
                },
                "created_at": {
                    "type": "string"
                },
                "currency": {
                    "type": "string"
                },
                "days_in_year": {
                    "type": "integer"
                },
                "down_payment": {
                    "type": "number"
                },
                "fixed_installment": {
                    "type": "number"
                },
                "grace_period_months": {
                    "type": "integer"
                },
                "grace_period_type": {
                    "type": "string"
                },
                "id": {
                    "type": "integer"
                },
                "interest_rate": {
                    "type": "number"
                },
                "irr": {
                    "type": "number"
